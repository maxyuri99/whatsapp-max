# Porta da API
PORT=3000

# Chave obrigatória para header x-api-key
API_KEY=sua-chave-aqui

# Diretório persistente para credenciais/sessões do Baileys
SESSIONS_DIR=./sessions

# País padrão para normalização (ex: Brasil = 55)
COUNTRY_CODE_DEFAULT=55

# Webhook: timeout e tentativas
WEBHOOK_TIMEOUT_MS=6000
WEBHOOK_MAX_RETRIES=3

# Tempo para considerar sessão pronta após bootstrap (ms)
BOOTSTRAP_READY_TIMEOUT_MS=120000

# Política de reconexão
RECONNECT_MAX_ATTEMPTS=5
RECONNECT_BASE_DELAY_MS=2000
RECONNECT_MAX_DELAY_MS=15000

# Cache em memória (mantém ativado; se quiser desativar store futura, coloque false)
STORE_ENABLED=true
STORE_PERSIST_INTERVAL_MS=15000